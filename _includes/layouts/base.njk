<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.25.0/themes/prism-coy.css" integrity="sha256-0I7KRu3ythnGB35kGsiGUugMkxcKhiBPrucGSiUwMZA=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/lux/bootstrap.min.css" integrity="sha256-WW13HpaaG94O2RHAP6ZIIEcijhqdeYjh3FkqE7zgMbY=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css" integrity="sha256-xI9svxPNgINGMuNc6T4pgY5QN385llAJtoyzuf3rcbI=" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ '/css/site.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="{{ '/' | url }}">{{ metadata.title }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav ms-auto">
          {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item">
              <a class="nav-link{% if entry.url == page.url %} active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      {{ content | safe }}
    </div>

    <footer class="container bg-dark mb-0 mt-3 py-3">
      <div class="row">
        <div class="col text-center">
          <a href="#" class="text-white px-2"><i class="bi bi-github fs-2"></i></a>
          <a href="#" class="text-white px-2"><i class="bi bi-linkedin fs-2"></i></a>
          <a href="#" class="text-white px-2"><i class="bi bi-twitter fs-2"></i></a>
          <a href="#" class="text-white px-2"><i class="bi bi-instagram fs-2"></i></a>
          <a href="#" class="text-white px-2"><i class="bi bi-youtube fs-2"></i></a>
        </div>
      </div>
    </footer>

    <footer class="container bg-primary text-white my-0 py-3">
      <div class="row">
        <div class="col-md-4">
          <h4 class="text-white">Jeremy Knight</h4>
          <a href="https://ko-fi.com/jeremyknight"><img src="{{ '/img/buy-me-a-coffee.png' | url }}" alt="buy me a coffee" class="w-100"></a>
          <h5 class="text-white mt-3">Pages</h5>
          <div class="d-grid gap-2 mb-3">
            <a class="btn btn-dark">About</a>
            <a class="btn btn-dark">Recommendations</a>
          </div>
          <h5 class="text-white">Links</h5>
          <div class="d-grid gap-2">
            <a class="btn btn-dark" target="_blank" href="https://www.brdnug.org">Baton Rouge .NET User Group</a>
            <a class="btn btn-dark" target="_blank" href="https://www.htdnug.org">Houma-Thibodaux .NET User Group</a>
          </div>
        </div>
        <div class="col-md-4">
          <h4 class="text-white">Tags</h4>
          <div>
            {% for tag in collections.tagList %}
              {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
              <a href="{{ tagUrl | url }}" title="{{ tag }}"><span class="badge bg-dark">{{ tag }}</span></a>
            {% endfor %}
          </div>
        </div>
        <div class="col-md-4">
          <h4 class="text-white">Twitter</h4>
          <a class="twitter-timeline" data-height="500" data-theme="dark" href="https://twitter.com/jeremyknight_me?ref_src=twsrc%5Etfw">Tweets by jeremyknight_me</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
